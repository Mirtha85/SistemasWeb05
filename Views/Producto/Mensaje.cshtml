@{
}
@model ProductoListViewModel;

<div class="text-center my-4">
    <div id="categorias" style="display: flex; flex-wrap: wrap; justify-content: center;">
        <button class="btn btn-warning btn-categoria btn-todos" data-id="todos" style="margin-bottom: 10px;">
            Mostrar Todos
        </button>
        @foreach (var categoria in Model.categorias)
        {
            <button class="btn btn-warning btn-categoria mr-2" data-id="@categoria.CategoriaId" style="margin-bottom: 10px;">
                @categoria.NombreCategoria
            </button>
        }
    </div>
</div>
<div class="container d-flex justify-content-center mt-50 mb-50">
    <div class="row">
        @foreach (var Producto in Model.Productos)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mt-3 col-xs-12 widget" data-categoria="@Producto.CategoriaId">
                <partial name="_ProductoCard" model="Producto" />
            </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.btn-categoria').click(function () {
            var categoriaId = $(this).data('id');
            if (categoriaId === 'todos') {
                $('.widget').show();
            } else {
                $('.widget').hide();
                $('.widget[data-categoria="' + categoriaId + '"]').show();
            }
        });
    });
</script>

<style>
    .btn-categoria {
        margin-right: 10px; /* Ajusta el valor según tus necesidades */
    }
</style>